<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_vpa_dialog_bg">

        <TextView
            android:id="@+id/tv_title"
            style="@style/dialog_vpa_text_title"
            android:layout_marginTop="52px"
            android:text="@string/dialog_custom_greet_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/dialog_vpa_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68px"
            android:layout_marginTop="90px"
            android:layout_marginEnd="68px"
            android:text="@string/dialog_custom_greet_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <EditText
            android:id="@+id/et_custom_greet"
            android:layout_width="832px"
            android:layout_height="122px"
            android:layout_marginStart="24px"
            android:layout_marginTop="113px"
            android:background="@drawable/rect_vpa_edit_bg"
            android:paddingStart="38px"
            android:textColor="#333333"
            android:textSize="34px"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            tools:text="主驾你好" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="84px"
            android:layout_height="84px"
            app:layout_constraintTop_toTopOf="@id/et_custom_greet"
            app:layout_constraintBottom_toBottomOf="@id/et_custom_greet"
            app:layout_constraintEnd_toEndOf="@id/et_custom_greet"
            android:layout_marginEnd="32px"
            android:src="@mipmap/ic_edit_delete" />

        <Button
            android:id="@+id/dialog_button_confirm"
            android:layout_width="384px"
            android:layout_height="130px"
            android:layout_marginStart="70px"
            android:layout_marginBottom="64px"
            android:background="@drawable/rect_confirm_button_bg"
            android:text="@string/dialog_save"
            android:textColor="#FFFFFF"
            android:textSize="36px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/dialog_button_cancel"
            android:layout_width="384px"
            android:layout_height="130px"
            android:layout_marginStart="64px"
            android:background="@drawable/rect_cancel_button_bg"
            android:text="@string/dialog_cancel"
            android:textColor="#333333"
            android:textSize="36px"
            app:layout_constraintBottom_toBottomOf="@id/dialog_button_confirm"
            app:layout_constraintStart_toEndOf="@id/dialog_button_confirm"
            app:layout_constraintTop_toTopOf="@id/dialog_button_confirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>