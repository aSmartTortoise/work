<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_vpa_dialog_bg">

        <TextView
            android:id="@+id/tv_title"
            style="@style/dialog_vpa_text_title"
            android:layout_marginTop="50px"
            android:text="@string/dialog_continuous_dialogue_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/dialog_vpa_text_content"
            android:layout_marginStart="152px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="152px"
            android:gravity="center_horizontal"
            android:text="@string/dialog_continuous_dialogue_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginStart="56px"
            android:layout_marginTop="48px"
            android:src="@mipmap/ic_dialog_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/vpa_continuous_scene_bg_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>