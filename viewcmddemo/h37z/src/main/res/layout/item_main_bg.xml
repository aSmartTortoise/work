<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_main"
    android:layout_width="@dimen/dp_620"
    android:layout_height="@dimen/dp_124"
    android:background="@color/transparent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_choose_bg"
        android:layout_width="@dimen/dp_540"
        android:layout_height="@dimen/dp_112"
        android:layout_marginStart="@dimen/dp_40"
        android:contentDescription="@null"
        android:src="@drawable/sidebar_selected_d"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/dp_74"
        android:layout_height="@dimen/dp_74"
        android:layout_marginStart="@dimen/dp_80"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/icon_vehicle_n" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_20"
        android:contentDescription="@string/attr_tab"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/gray_833"
        android:textSize="@dimen/sp_34"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tab_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vehicle" />


</androidx.constraintlayout.widget.ConstraintLayout>