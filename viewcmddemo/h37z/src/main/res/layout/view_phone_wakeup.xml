<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_driver_zone"
        style="@style/common_vpa_text_title"
        android:text="@string/dialog_permission_driver_zone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_driver_zone_word_1"
        style="@style/common_vpa_text_main"
        android:layout_width="348px"
        android:layout_height="122px"
        android:layout_marginTop="22px"
        android:background="@drawable/rect_item_tab"
        android:gravity="center"
        android:text="@string/dialog_permission_dial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_driver_zone" />

    <TextView
        android:id="@+id/tv_driver_zone_word_2"
        style="@style/common_vpa_text_main"
        android:layout_width="348px"
        android:layout_height="122px"
        android:layout_marginStart="52px"
        android:background="@drawable/rect_item_tab"
        android:gravity="center"
        android:text="@string/dialog_permission_view_miss_phone"
        app:layout_constraintStart_toEndOf="@id/tv_driver_zone_word_1"
        app:layout_constraintTop_toTopOf="@id/tv_driver_zone_word_1" />

    <TextView
        android:id="@+id/tv_driver_zone_word_3"
        style="@style/common_vpa_text_main"
        android:layout_width="348px"
        android:layout_height="122px"
        android:layout_marginTop="52px"
        android:background="@drawable/rect_item_tab"
        android:gravity="center"
        android:text="@string/dialog_permission_view_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_driver_zone_word_1" />

</androidx.constraintlayout.widget.ConstraintLayout>