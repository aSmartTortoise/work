<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_164"
    android:paddingStart="@dimen/dp_49.5"
    android:paddingEnd="@dimen/dp_49.5"
    tools:background="@color/black_ff1E1F22">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_drawing_pen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="@dimen/dp_465"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:textColor="@color/goods_name"
        android:textSize="@dimen/sp_28"
        app:layout_constraintStart_toEndOf="@id/aiv_pen"
        app:layout_constraintTop_toTopOf="@id/aiv_pen"
        tools:text="绘画次数包-S" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="@dimen/dp_465"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/goods_desc"
        android:textSize="@dimen/sp_22"
        app:layout_constraintBottom_toBottomOf="@id/aiv_pen"
        app:layout_constraintStart_toEndOf="@id/aiv_pen"
        tools:text="每天60张绘画生成次数，AI绘画小助手。" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_48"
        android:textColor="@color/goods_price"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="￥19.9" />


</androidx.constraintlayout.widget.ConstraintLayout>