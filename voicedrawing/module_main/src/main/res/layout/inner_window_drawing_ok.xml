<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/inner_window_drawing_ok_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_24"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_120"
        android:scaleType="centerCrop" />

    <TextView
        android:lineSpacingExtra="9sp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_84"
        android:layout_marginStart="@dimen/dp_32"
        android:drawableEnd="@drawable/arrow_notification"
        android:drawablePadding="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_15"
        android:text="生成成功\n点击查看"
        android:textColor="@color/gray_FF9E9E9E"
        android:textSize="@dimen/sp_28"
        tools:ignore="RtlSymmetry" />


</LinearLayout>