<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@drawable/bg_main"
    tools:context=".ui.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="922dp"
        android:clipToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        android:layout_marginBottom="148dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_wake_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0sp"
            tools:text="嗨岚图"
            android:contentDescription="@string/attr_desc_text"
            android:textColor="@color/home_voyah_text_color"
            android:textSize="@dimen/sp_40"
            android:textFontWeight="400"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:lineSpacingExtra="0sp"
            android:contentDescription="@string/attr_desc_text"
            android:text="画一幅"
            android:textFontWeight="400"
            android:fontFamily="DF King Gothic SC14"
            android:textColor="@color/home_voyah_text_color"
            android:textSize="@dimen/sp_40"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:lineSpacingExtra="0sp"
            android:contentDescription="@string/attr_desc_text"
            android:text="“山光忽西落，池中月渐东升”"
            android:textColor="@color/home_voyah_text_color3"
            android:textSize="@dimen/sp_40"
            android:textFontWeight="500"
            android:fontFamily="DF King Gothic SC14"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8.4sp"
            android:text="剩余"
            android:textColor="@color/home_count_text_color"
            android:textSize="@dimen/sp_28"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="5/20"
            android:textColor="@color/home_count_text_color"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_history"
        android:layout_width="220dp"
        android:layout_height="88dp"
        app:backgroundTint="@null"
        android:background="@drawable/btn_bg2"
        android:stateListAnimator="@animator/btn_style1"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        android:layout_marginBottom="48dp"
        android:src="@drawable/btn_his2"
        android:textSize="28sp"
        android:tag="ViewCmd:绘画历史|打开绘画历史"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>