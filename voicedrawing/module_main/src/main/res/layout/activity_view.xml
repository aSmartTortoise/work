<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ViewActivity"
    android:background="@color/main_window_bg">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:ignore="MissingConstraints" />

    <include
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="104dp"
        layout="@layout/item_back"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/icon_left"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="627dp"
        android:visibility="gone"
        android:stateListAnimator="@animator/btn_style1"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/icon_right"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="627dp"
        android:visibility="gone"
        android:stateListAnimator="@animator/btn_style1"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="329dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_save_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="108dp"
        android:textColor="#ffFFFFFF"
        android:textSize="32sp"
        android:text="保存到相册"
        android:stateListAnimator="@animator/btn_style1"/>


</androidx.constraintlayout.widget.ConstraintLayout>