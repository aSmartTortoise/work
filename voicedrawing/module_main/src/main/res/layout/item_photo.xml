<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bg"
    android:layout_width="1147dp"
    android:layout_height="922dp"
    android:clipChildren="false">

    <ImageView
        android:id = "@+id/bg_bottom"
        android:layout_width="@dimen/home_bottom_width"
        android:layout_height="@dimen/home_bottom_height"
        android:src="@drawable/home_bottom"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/home_bottom_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="2dp"
        android:layout_height="186dp"
        android:layout_marginLeft="86dp"
        android:background="@color/home_line_color"
        app:layout_constraintLeft_toLeftOf="@id/layout_main"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="2dp"
        android:layout_height="186dp"
        android:layout_marginRight="86dp"
        android:background="@color/home_line_color"
        app:layout_constraintRight_toRightOf="@id/layout_main"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="@dimen/home_photo_width"
        android:layout_height="@dimen/home_photo_height"
        android:layout_marginTop="186dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/image_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/photo_frame"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>