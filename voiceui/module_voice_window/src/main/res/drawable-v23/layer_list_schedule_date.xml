<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/dp_100"
        android:height="@dimen/dp_100">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />

            <gradient
                android:angle="180"
                android:endColor="#ff2B9FFF"
                android:startColor="#ff115DE1"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:width="@dimen/dp_64"
        android:height="@dimen/dp_64"
        android:start="@dimen/dp_18"
        android:top="@dimen/dp_18">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_8" />

            <gradient
                android:angle="180"
                android:endColor="#80FFFFFF"
                android:startColor="#ffF8FAFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>