<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="WindowAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.VoiceUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Voice_Scrollbar">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">always</item>

        <item name="android:scrollbarSize">@dimen/dp_12</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_block</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Voice_typewriter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">@dimen/dp_352</item>
        <item name="android:minWidth">@dimen/dp_122</item>
        <item name="android:textColor">@color/asr_text_valid</item>
        <item name="android:textSize">@dimen/sp_32</item>
    </style>


</resources>
