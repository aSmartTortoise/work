<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="1"
    tools:alpha="1"
    app:cardCornerRadius="@dimen/dp_64"
    android:id="@+id/ll_va_root"
    android:background="#e6EEF2FF"
    app:cardElevation="16dp"
    android:clipChildren="false"
    android:elevation="16dp"
    android:translationZ ="16dp"
    android:outlineAmbientShadowColor="#ff0000"
    android:outlineSpotShadowColor="#ff0000"
    android:ambientShadowAlpha = "1"
    >
<!--        android:background="@drawable/vpa_typewriter_card_bg"-->


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_112"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20">

        <org.libpag.PAGImageView
            android:id="@+id/pag_vpa"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72" />

        <LinearLayout
            android:id="@+id/ll_asr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_48">

            <TextView
                android:id="@+id/typewriter_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:singleLine="true"
                tools:text="@string/voice_state_listening"
                android:textColor="@color/asr_text_valid"
                android:textSize="@dimen/sp_32" />

            <com.voyah.voice.framework.view.NoPaddingTextView
                android:id="@+id/tv_gpt_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大模型生成中"
                android:textColor="@color/gpt_tip"
                android:textSize="@dimen/sp_18"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>



