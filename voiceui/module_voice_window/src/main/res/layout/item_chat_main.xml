<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/root_view_bg">
        <LinearLayout
            android:id="@+id/ll_thinking_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_reasoning"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_24">
            <ImageView
                android:id="@+id/img_thinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_thinking"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_6"/>
            <TextView
                android:id="@+id/tv_reasoning_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_28"
                android:text="思考中..."
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:textColor="@color/chat_main"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand_up"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="@dimen/dp_6"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reasoning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_thinking_state"
            app:layout_constraintBottom_toTopOf="@id/tv_content_main"
            android:paddingBottom="@dimen/dp_24"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/chat_think_split"
                android:layout_marginLeft="@dimen/dp_24"/>
            <TextView
                android:id="@+id/tv_reasoning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="深度思考过程"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_thinking_state"
                android:layout_marginLeft="@dimen/dp_24"
                android:singleLine="false"
                android:visibility="visible"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/chat_deepseek_text_color"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="400dp"
            android:lineSpacingExtra="@dimen/sp_9"
            android:textColor="@color/chat_main"
            android:textSize="@dimen/sp_28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_reasoning"
            tools:text="岚图汽车" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>