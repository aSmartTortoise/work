<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_card"
        android:layout_width="1264dp"
        android:layout_height="880dp"
        app:layout_constraintStart_toStartOf="@+id/iv_music"
        app:layout_constraintTop_toBottomOf="@+id/iv_music"
        android:layout_marginTop="@dimen/dp_48"/>

    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_64"/>

    <TextView
        android:id="@+id/tv_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/iv_music"
        app:layout_constraintStart_toEndOf="@+id/iv_music"
        android:layout_marginStart="@dimen/dp_24"
        android:textSize="@dimen/sp_28"
        android:textColor="@color/media_artist_name"
        android:text="音乐"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.voyah.voice.card.indicator.VerticalDotsIndicator
            android:layout_gravity="center_vertical"
            android:id="@+id/vdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
