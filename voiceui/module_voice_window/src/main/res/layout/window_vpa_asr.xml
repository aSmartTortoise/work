<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sfl_vpa_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="1"
    android:padding="@dimen/dp_10"
    app:shape_radius="@dimen/dp_64"
    app:shape_shadowColor="@color/shadow"
    app:shape_shadowSize="@dimen/dp_10"
    app:shape_solidColor="@color/bg_vpa_typewriter"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:id="@+id/ll_va_root"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_112"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        tools:ignore="RtlSymmetry,UselessParent">

        <com.voyah.window.view.vpa.VpaSurfaceView
            android:id="@+id/sfv_vpa"
            android:layout_width="88px"
            android:layout_height="88px" />

        <LinearLayout
            android:id="@+id/ll_asr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_48">

            <TextView
                android:id="@+id/typewriter_view"
                style="@style/Voice_typewriter"
                android:text="@string/voice_state_listening" />

            <com.voyah.voice.framework.view.NoPaddingTextView
                android:id="@+id/tv_gpt_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大模型生成中"
                android:textColor="@color/gpt_tip"
                android:textSize="@dimen/sp_18"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</com.hjq.shape.layout.ShapeFrameLayout>




