<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="900px"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layout_asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vpa_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.voyah.aiwindow.ui.widget.vpa.VpaSurfaceView
            android:id="@+id/iv_asr_anim"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:ellipsize="start"
            android:lineSpacingExtra="8sp"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#CCFFFFFF"
            android:textSize="28sp"
            tools:text="@string/vpa_listening" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/layout_asr"
        app:layout_constraintStart_toStartOf="@id/layout_asr"
        app:layout_constraintTop_toBottomOf="@id/layout_asr" />

    <LinearLayout
        android:id="@+id/layout_skill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/vpa_bg_skill"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/layout_asr"
        app:layout_constraintStart_toStartOf="@id/layout_asr"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

</androidx.constraintlayout.widget.ConstraintLayout>
