<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_trace_panel_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_drag_zone_bg"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/float_trace_panel_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/scale_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bt_scale_icon"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/close_button"
            android:background="@drawable/bt_refresh_icon"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/refresh_button"
            android:background="@drawable/bt_save_icon"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/bt_close_icon"
            android:padding="16dp" />

        <TextView
            android:id="@+id/scrollable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/close_button"
            android:lineSpacingExtra="2dp"
            android:maxLines="10000"
            android:paddingStart="16dp"
            android:paddingTop="32dp"
            android:paddingEnd="16dp"
            android:paddingBottom="32dp"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
</layout>