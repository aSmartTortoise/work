<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_settings"
            layout="@layout/layout_settings" />

        <View
            android:id="@+id/divider_line"
            style="@style/common_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_settings" />

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="35dp"
            android:text="保存U盘目录:"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_line" />

        <EditText
            android:id="@+id/et_folder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_edit_bg"
            android:enabled="false"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="VoiceLogAudio"
            android:textColorHint="#FFB6BABF"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_folder_name"
            app:layout_constraintStart_toEndOf="@+id/tv_folder_name"
            app:layout_constraintTop_toTopOf="@+id/tv_folder_name"
            app:layout_constraintWidth_percent="0.7" />


        <CheckBox
            android:id="@+id/cb_logcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:checked="false"
            android:text="安卓日志"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_folder_name" />

        <CheckBox
            android:id="@+id/cb_va_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:checked="true"
            android:text="讯飞日志"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/cb_logcat"
            app:layout_constraintTop_toTopOf="@id/cb_logcat" />

        <CheckBox
            android:id="@+id/cb_tts_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:checked="true"
            android:text="微软TTS日志"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/cb_va_log"
            app:layout_constraintTop_toTopOf="@id/cb_va_log" />

        <CheckBox
            android:id="@+id/cb_debug_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:checked="true"
            android:text="语音音频"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/cb_tts_log"
            app:layout_constraintTop_toTopOf="@id/cb_tts_log" />

        <TextView
            android:id="@+id/tv_clean_audio_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:drawableStart="@drawable/ic_tip"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="#0ABAFB"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/cb_logcat"
            app:layout_constraintTop_toBottomOf="@id/cb_logcat" />

        <TextView
            android:id="@+id/tv_execute_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@id/btn_dump"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.70" />


        <Button
            android:id="@+id/btn_dump"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:background="@drawable/btn_confirm_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="导出到U盘"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_clear"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:background="@drawable/btn_confirm_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="清空音频或日志"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_dump"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_dump"
            app:layout_constraintTop_toTopOf="@id/btn_dump" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>