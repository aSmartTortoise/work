<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="112px" android:height="58px" />
            <corners android:radius="30px" />
            <solid android:color="@color/switch_track_on" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="112px" android:height="58px" />
            <corners android:radius="30px" />
            <solid android:color="@color/switch_track_off" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <size android:width="112px" android:height="58px" />
            <corners android:radius="30px" />
            <solid android:color="@color/switch_track_off" />
        </shape>
    </item>
</selector>