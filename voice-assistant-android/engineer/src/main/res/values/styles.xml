<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    不生效-->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="common_text_title">
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_text_content">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/list_divider</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">26sp</item>
    </style>
</resources>