<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_update_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/choosedialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="声纹"
        android:textColor="#f23fdf"
        android:textSize="24sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/vpr_animation_iv"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="请说：嗨小岚"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vpr_reg"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="注册声纹"
            android:textStyle="bold"
            android:textColor="#f23fdf"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/vpr_rec"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:text="声纹识别"
            android:textStyle="bold"
            android:textColor="#f23fdf"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/choosedialog_left"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="暂停注册声纹"
            android:textStyle="bold"
            android:textColor="#f23fdf"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/choosedialog_right"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="暂停声纹识别"
            android:textColor="#f23fdf"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>